<%= @user.name %>店出品商品一覧

<table class="table table-hover table-inverse">
    <thead>
        <tr>
        <th>商品名</th>
        <th>数量</th>
        <th>原価</th>
        <th>在庫金額</th>
        <th>消費期限</th>
        <th>備考</th>
        <th>画像</th>
        </tr>
    </thead>

 <tbody>

 <% @items.each do |item| %>
 
 <%= f.check_box :item,
                            { multiple: true,
                              checked: @book.genre.present? ? @book.genre.split(",").include?(genre) : false },  #・・・①
                              genre, nil %>
 
 
      <tr>
        <td><%= item.name %></td>
        <td><%= item.amount%></td>
        <td><%= item.price %></td>
        <td><%= item.until %></td>
        <td><%= item.notice %></td>
      </tr>
    <% end %>
  </tbody>