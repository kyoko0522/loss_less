<div class="container">
  <div class="row">
   <div class="col-md-11 offset-md-1">
<table class="table table-hover table-inverse">
    <thead>
        <strong><h4><%= @user.name %>店在庫受け入れ状況</h4></strong>


        <tr>
            <th>依頼先店舗名</th>
            <th>注文日</th>
            <th>商品名</th>
            <th>商品コード</th>
            <th>数量</th>
            <th>原価</th>
            <th>在庫金額</th>
            <th>消費期限</th>
            <th>発送ステータス</th>
        </tr>
    </thead>
        <tbody>
            <% @orders.each do |order| %>
          <tr>
             <td><%= order.ordered_user.name %>店</td>
             <td><%= order.created_at.strftime('%Y/%m/%d') %></td>

             <td width=”300″>
             <% order.order_items.each do |item| %>
            <%=item.name %></br>
            <% end %></td>

             <td><% order.order_items.each do |item| %>
            <%= item.code %></br>
            <% end %></td>

            <td><% order.order_items.each do |item| %>
            <%= item.amount %></br>
            <% end %></td>

            <td><% order.order_items.each do |item| %>
            <%= item.price %></br>
            <% end %></td>


            <td><% order.order_items.each do |item| %>
            <% @subtotal = item.price * item.amount %>
            <%= @subtotal %></br>
            <% end %></td>


            <td><% order.order_items.each do |item| %>
            <%= item.until %></br>
            <% end %></td>

            <td><%= order.send_status  ? '発送済み' :'準備中' %></td>

          </tr>

          <% end %>
        </tbody>
</table>
 </div>
  </div>
</div>