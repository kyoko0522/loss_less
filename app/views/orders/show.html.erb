<div class="container">
  <div class="row">
   <div class="col-md-11 offset-md-1">
<table class="table table-hover table-inverse">
    <thead>
        <tr>
            <th>商品名</th>
            <th>商品コード</th>
            <th>商品画像</th>
        </tr>
    </thead>
        <tbody>
          <tr>
        <% @order_items.each do |item| %>
            <td><%= item.item.name %></td>
            <td><%= item.item.code %></td>
            <td><%= attachment_image_tag item.item, :image %></td>
          </tr>
         <% end %>
        </tbody>
</table>
</div>
  </div>
</div>
