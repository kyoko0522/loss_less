<div class="container">
  <div class="row">
   <div class="col-md-8 offset-md-2">

<table class="table table-hover table-inverse">
    <thead>
        <tr>
            <th>商品名</th>
            <th>商品コード</th>
            <th>数量</th>
            <th>原価</th>
            <th>在庫金額</th>
            <th>消費期限</th>
        </tr>
    </thead>
        <tbody>
            <% @orders.each do |order| %>
          <tr>
             <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
             <td><%#= order.user.postal_code %><%#= order.user.address %><%#= order.user.name %></td>
             <% order.order_items.each do |item| %>
            <td><%= link_to item.item.name, order_path(order.id) %></td>
            <td><%= item.item.code %></td>
            <td><%= item.item.amount %></td>
            <td><%= item.item.price %></td>
            <% @subtotal = item.item.price * item.item.amount %>
            <td><%= @subtotal %></td>
            <td><%= item.item.until %></td>
            <td><%#= attachment_image_tag @item, :image %></td>

          </tr>
          <% end %>
          <% end %>
        </tbody>
</table>
 </div>
  </div>
</div>