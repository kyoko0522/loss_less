<%= form_with model:@item, url: item_path(@item), method: :patch, local:true do |f| %>
<table>
<tr>
  <th>商品画像</th>
  <td><%= f.attachment_field :image %></td>
</tr>

<tr>
    <th>商品名</th>
    <td><%=f.text_field :name %></td>
</tr>

<tr>
    <th>商品コード</th>
    <td><%=f.text_field :code %></td>
</tr>

<tr>
    <th>数量</th>
    <td><%=f.text_field :amount %></td>
</tr>


<tr>
    <th>商品説明</th>
    <td><%=f.text_area :introduction %></td>
</tr>


<tr>
    <th>原価</th>
    <td><%=f.text_field :price %>円</td>
</tr>

<tr>
    <th>消費期限</th>
    <td><%= f.date_field :until %></td>
</tr>

<tr>
   <th>備考</th>
   <td><%= f.text_area :notice %></td>
</tr>


<tr>
    <td><%= f.submit'変更を保存',class: "btn btn-sm btn-success" %></td>

</tr>
<% end %>
</table>