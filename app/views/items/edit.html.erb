<div class="container">
  <div class="row">
   <div class="col-md-8 offset-md-2">

<%= form_with model:@item, url: item_path(@item), method: :patch, local:true do |f| %>
<table>
<tr>
  <th>商品画像</th>
  <td><%= f.attachment_field :image %></td>
</tr>

<tr>
    <th>商品名</th>
    <td><%=f.text_field :name %></td>
</tr>

<tr>
    <th>商品コード</th>
    <td><%=f.text_field :code %></td>
</tr>

<tr>
    <th>数量</th>
    <td><%=f.text_field :amount %></td>
</tr>


<tr>
    <th>商品説明</th>
    <td><%=f.text_area :introduction %></td>
</tr>


<tr>
    <th>原価</th>
    <td><%=f.text_field :price %>円</td>
</tr>

<tr>
    <th>消費期限</th>
    <td><%= f.date_field :until %></td>
</tr>

<tr>
   <th>備考</th>
   <td><%= f.text_area :notice %></td>
</tr>

</table>

<div class="col-md-7 offset-md-5">
  <%= f.submit'変更を保存',class: "btn btn-sm btn-success" %>
</div>
</div>
  </div>
</div>
<% end %>