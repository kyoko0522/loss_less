<div class="container">
  <div class="row">
   <div class="col-md-8 offset-md-2">

<strong>過剰在庫検索</strong>
<%= form_with url: items_search_path, method: :get, local: true do |f| %>
  <%= f.text_field :name %>
  <%= f.submit '検索' %>
<% end %>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>商品名</th>
      <th>数量</th>
      <th>出品店舗</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
    <% unless item.user == current_user %>

      <tr>
        <td><%= link_to item.name, item_buys_path(item.id) %></td>
        <td><%= item.amount%></td>
        <td><%= link_to item.user.name, user_path(item.user.id) %></td>
      </tr>

    <% end %>
    <% end %>

  </tbody>
</table>
 </div>
  </div>
</div>