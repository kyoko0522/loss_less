<div class="container">
  <div class="row">
   <div class="col-md-8 offset-md-2">
<%= form_with model:@item, url: items_path, method: :post,  local:true do |f| %>
<table>
 <h3>新規出品商品登録</h3>

 <% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました
  <ul>
  <% @item.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>

<tr>
  <th>商品画像</th>
  <td><%= f.attachment_field :image %>
</tr>

<tr>
  <th>商品名</th>
  <td><%= f.text_field :name %></td>
</tr>
<tr>
    <th>商品コード</th>
    <td><%= f.text_field :code %></td>
</tr>

<tr>
    <th>数量</th>
    <td><%= f.text_field :amount %></td>
</tr>

<tr>
    <th>原価</th>
    <td><%= f.text_field :price %>円</td>
</tr>

<tr>
    <th>消費期限</th>
    <td><%= f.date_field :until %></td>
</tr>


<tr>
   <th>備考</th>
   <td><%= f.text_area :notice %></td>
</tr>
</table>

<div class="col-md-7 offset-md-5">
  <%= f.submit '出品登録',class: "btn btn-sm btn-success" %>
</div>



<% end %>

</div>
  </div>
</div>