<!--  合計在庫金額 <%#= @total %>円-->
  <div class="col-md-1 offset-md-11">
  <%= f.submit '注文する', class: "btn btn-sm btn-primary" %>
  <!--</div>-->
</div>

<% end %>
</div>
  </div>
</div>