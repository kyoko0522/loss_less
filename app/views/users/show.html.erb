<div class="container">
  <div class="row">
   <div class="col-md-8 offset-md-2">

<h3><strong><%= @user.name %>店出品商品一覧</strong></h3>

<table class="table table-hover table-inverse">
    <thead>
        <tr>
        <th>商品名</th>
        <th>商品コード</th>
        <th>数量</th>
        <th>原価</th>
        <th>在庫金額</th>
        <th>消費期限</th>
        <th>備考</th>
        </tr>
    </thead>






       <%#= form_with model:@order, url: orders_path, method: :post,  local:true do |f| %>

       <%#= f.hidden_field :order_user_id, :value => current_user.id %>
        <%#= f.hidden_field :ordered_user_id, :value => @user.id %>


        <%#= collection_check_boxes(:order_item, :item_id, @user.items, :id, :name, include_hidden: false) do |b| %>
    <tbody>

     <%#= b.label { b.check_box + b.text } %>


      <tr>


         <td width=”300″>
             <% @items.each do |item| %>
            <%=link_to item.name, buy_path(item.id) %></br>
            <% end %></td>

             <td><% @items.each do |item| %>
            <%= item.code %></br>
            <% end %></td>

            <td><% @items.each do |item| %>
            <%= item.amount %></br>
            <% end %></td>

            <td><% @items.each do |item| %>
            <%= item.price %></br>
            <% end %></td>


            <td><% @items.each do |item| %>
            <% @subtotal = item.price * item.amount %>
            <%= @subtotal %></br>
            <% end %></td>


            <td><% @items.each do |item| %>
            <%= item.until %></br>
            <% end %></td>
        <td><%#= attachment_image_tag item, :image, :fill, 200, 200, format: 'jpeg' %></td>
<%#= f.hidden_field :amount, :value => item.amount, multiple: true%>
<%#= f.hidden_field :price, :value => item.price, multiple: true %>
<%#= f.hidden_field :until, :value => item.until, multiple: true %>
<%#= f.hidden_field :notice, :value => item.notice, multiple: true %>
<%#= f.hidden_field :image_id, :value => item.image_id, multiple: true %>
     </tr>
    </tbody>
</table>
</div>
</div>



